@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
<div class="row">
    <div class="col-6">
       <h3>Grocery List</h3>
    </div>
     <div class="col-6">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp;Add item</a>
     </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
           <th>Name</th>
           <th>Quantity</th>
           <th></th>
        </tr>
    </thead>
    <tbody>
        
            @foreach(var obj in Model)
            {
                <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                    <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a></td>
                    <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i></a></td>
                </tr>
            }
            
        
    </tbody>
</table>
</div>

